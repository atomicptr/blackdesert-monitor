# The name of the BDO executable
processName: BlackDesert64.exe
# Time between every "is BDO running?" attempt
pollInterval: 30s
# Times to check before informing the user
unavailabilityThreshold: 5
# Close the game when it becomes unavailable
closeBlackDesertWhenUnavailable: true
telegram:
  # Your Telegram Token, read README on how to obtain one
  token:
  # Your Telegram User ID, if you have the bot setup you can get it with "/myid"
  userId:
